<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <clip>
      <shape>
        <corners
          android:bottomLeftRadius="@dimen/episode_progress_corner_radius"
          android:bottomRightRadius="@dimen/episode_progress_corner_radius"
          android:topLeftRadius="@dimen/episode_progress_corner_radius"
          android:topRightRadius="@dimen/episode_progress_corner_radius" />
        <solid android:color="@color/colorContentProgressBackground" />
      </shape>
    </clip>
  </item>
  <item
    android:id="@android:id/progress"
    android:gravity="center">
    <clip>
      <shape>
        <corners
          android:bottomLeftRadius="@dimen/episode_progress_corner_radius"
          android:bottomRightRadius="@dimen/episode_progress_corner_radius"
          android:topLeftRadius="@dimen/episode_progress_corner_radius"
          android:topRightRadius="@dimen/episode_progress_corner_radius" />
        <solid android:color="@color/colorContentProgress" />
      </shape>
    </clip>
  </item>
</layer-list>
